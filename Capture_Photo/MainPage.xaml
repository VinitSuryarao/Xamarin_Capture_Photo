    <ContentPage.Content>
        <StackLayout>
            <Button Text="Click Photo" Clicked="Button_Clicked"/>
            <Image  x:Name="imgPhoto" HeightRequest="300" WidthRequest="300"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
